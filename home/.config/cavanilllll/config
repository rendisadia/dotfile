## Configuration file for CAVA.
# Remove the ; to change parameters.

[general]
# Accepts only non-negative values.
framerate = 60

# 'autosens' will attempt to decrease sensitivity if the bars peak. 1 = on, 0 = off
autosens = 1

# Manual sensitivity in %. If autosens is enabled, this will only be the initial value.
sensitivity = 100

# The number of bars (0-512). 0 sets it to auto (fill up console).
bars = 0
bar_width = 2
bar_spacing = 1

# Lower and higher cutoff frequencies for the lowest and highest bars
lower_cutoff_freq = 20
higher_cutoff_freq = 20000

[input]
# Set method to 'pipewire' if you're using PipeWire, 'pulse' for PulseAudio, or 'alsa' for ALSA.
method = pipewire
source = auto

[output]
# Use 'noncurses' for smoother output in most terminals.
method = noncurses
channels = mono
mono_option = average
reverse = 0

[color]
background = '#000000'  # Black background for terminal
gradient = 1
gradient_count = 6
gradient_color_1 = '#ff6f91'  # Soft Pink
gradient_color_2 = '#ffcccb'  # Light Pink
gradient_color_3 = '#ffffff'  # White
gradient_color_4 = '#cccccc'  # Light gray
gradient_color_5 = '#aaaaaa'  # Medium gray
gradient_color_6 = '#888888'  # Dark gray

[smoothing]
# Enables smooth transitions between bar heights.
monstercat = 1
waves = 1
noise_reduction = 77

[eq]
# Equalizer settings to balance bass, midtones, and treble.
1 = 1  # bass
2 = 1  # midtone
3 = 1  # treble
